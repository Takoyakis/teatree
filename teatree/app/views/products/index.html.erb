  <% @products.each do |tea| %>
  <div class="row">
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <%= image_tag "#{tea.image}" %>
        <div class="caption">
          <h3><%= tea.name %></h3>
          <p>explanation</p>
          <p><a href="#" class="btn btn-primary" role="button">コメントする</a> <a href="#" class="btn btn-default" role="button">詳細</a></p>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>